#!/usr/bin/make -f

PKGNAME=openstack-install
PKGDIR=debian/tmp

%:
	dh $@

override_dh_install:
	mkdir -p $(PKGDIR)/usr/share/man/man1
	mkdir -p $(PKGDIR)/usr/bin
	cp $(PKGNAME) $(PKGDIR)/usr/bin
	help2man $(PKGDIR)/usr/bin/$(PKGNAME) -n "apt install openstack bundles" --no-info > $(PKGDIR)/usr/share/man/man1/$(PKGNAME).1
	sed -i'' 's/conjure\\-setup/$(PKGNAME)/' $(PKGDIR)/usr/share/man/man1/$(PKGNAME).1
	sed -i'' 's/conjure-setup/$(PKGNAME)/' $(PKGDIR)/usr/share/man/man1/$(PKGNAME).1
	dh_install
