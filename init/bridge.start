#!/bin/sh

brctl addbr openstack0
ip addr add 10.99.0.1/24 dev openstack0
ip link set dev openstack0 up

if ! iptables -C FORWARD -i openstack0 -j ACCEPT; then
    iptables -A FORWARD -i openstack0 -j ACCEPT
fi
if ! iptables -C FORWARD -o openstack0 -j ACCEPT; then
    iptables -A FORWARD -o openstack0 -j ACCEPT
fi

if ! iptables -t nat -C POSTROUTING -s 10.99.0.1/24 ! -d 10.99.0.1/24 -j MASQUERADE; then
    iptables -t nat -A POSTROUTING -s 10.99.0.1/24 ! -d 10.99.0.1/24 -j MASQUERADE
fi
